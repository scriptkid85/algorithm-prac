#include <iostream>
#include <stdlib.h>
#include "IncreSTACK.cpp"

using namespace std;

//(1) TRISTACK
//(2) MinSTACK
//(3) IncreSTACK

//(4)

void hanoi(int N, int tower){
	if(N <= 1){
		cout << tower << "->" << (tower + 1) % 3 << endl;
		return;
	}
	hanoi(N - 1, (tower + 1) % 3);
	cout << tower<< "->" << (tower + 2) % 3 << endl;
	hanoi(N - 1, (tower + 1) % 3);


}

int main(int argc, char * argv[]){
	INCRESTACK<int> stack;
	hanoi(3, 0);

}
